<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TextView
        android:id="@+id/button_freezer_tv"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:textColor="@color/white"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/blue"
        android:text="냉동고"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"/>


    <TextView
        android:id="@+id/button_refrigerator_tv"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:textColor="@color/white"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/blue"
        android:text="냉장고"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/button_freezer_tv"
        app:layout_constraintStart_toStartOf="@id/button_freezer_tv"
        android:layout_marginTop="40dp"/>


    <TextView
        android:id="@+id/button_roomTemperature_tv"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:textColor="@color/white"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/blue"
        android:text="상온"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/button_refrigerator_tv"
        app:layout_constraintStart_toStartOf="@id/button_refrigerator_tv"
        android:layout_marginTop="40dp"/>


    <TextView
        android:id="@+id/button_product_registration_tv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/blue"
        android:text="상품등록"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/button_roomTemperature_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>