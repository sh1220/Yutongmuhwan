<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/top_tv"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:textColor="@color/blue_thick3"
        android:text="상품등록>냉동고>채소"
        android:textStyle="bold"
        android:textSize="35dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>



    <TextView
        android:id="@+id/food_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품명:"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_tv"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/food_name_ed"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/gray"
        android:hint="상품의 이름을 입력해주세요."
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16dp"
        android:gravity="center|left"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="8dp"
        app:layout_constraintStart_toEndOf="@id/food_purchase_date_tv"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/food_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"/>

    <TextView
        android:id="@+id/food_purchase_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구매일자:"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/food_name_tv"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"/>


    <EditText
        android:id="@+id/food_purchase_date_ed"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/gray"
        android:hint="날짜를 선택하세요."
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16dp"
        android:gravity="center|left"
        android:inputType="text"
        android:focusable="false"
        android:maxLines="1"
        android:paddingStart="8dp"
        app:layout_constraintStart_toEndOf="@id/food_purchase_date_tv"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/food_purchase_date_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"/>




    <TextView
        android:id="@+id/food_expiration_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유통기한:"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/food_purchase_date_tv"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/food_expiration_date_ed"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/gray"
        android:hint="날짜를 선택하세요."
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16dp"
        android:gravity="center|left"
        android:inputType="text"
        android:focusable="false"
        android:maxLines="1"
        android:paddingStart="8dp"
        app:layout_constraintStart_toEndOf="@id/food_purchase_date_tv"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/food_expiration_date_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"/>

    <TextView
        android:id="@+id/button_registration_tv"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/blue_thick2"
        android:text="등록"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>