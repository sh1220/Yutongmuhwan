<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/my_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_thick"
        android:text="나의 냉장고"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttons_line_1_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/my_tv"
        android:layout_marginTop="25dp">


        <TextView
            android:id="@+id/button_vegetable_tv"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/blue"
            android:text="채소"
            android:textSize="25dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_fruit_tv"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/button_fruit_tv"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/blue"
            android:text="과일"
            android:textSize="25dp"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/button_vegetable_tv"
            app:layout_constraintEnd_toStartOf="@id/button_meat_tv"
            app:layout_constraintTop_toTopOf="@id/button_vegetable_tv"/>

        <TextView
            android:id="@+id/button_meat_tv"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/blue"
            android:gravity="center"
            android:text="육류"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_fruit_tv"
            app:layout_constraintTop_toTopOf="@id/button_vegetable_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttons_line_2_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/buttons_line_1_cl"
        android:layout_marginTop="40dp">


        <TextView
            android:id="@+id/button_seafood_tv"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/blue"
            android:text="해산물"
            android:textSize="25dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_dairy_product_tv"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/button_dairy_product_tv"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/blue"
            android:text="유제품"
            android:textSize="25dp"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/button_seafood_tv"
            app:layout_constraintEnd_toStartOf="@id/button_drink_tv"
            app:layout_constraintTop_toTopOf="@id/button_seafood_tv"/>

        <TextView
            android:id="@+id/button_drink_tv"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/blue"
            android:gravity="center"
            android:text="음료"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_dairy_product_tv"
            app:layout_constraintTop_toTopOf="@id/button_seafood_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttons_line_3_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/buttons_line_2_cl"
        android:layout_marginTop="40dp">


        <TextView
            android:id="@+id/button_etc_tv"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/blue"
            android:text="기타"
            android:textSize="25dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_temp1_tv"
            app:layout_constraintTop_toTopOf="parent"/>



        <TextView
            android:id="@+id/button_temp1_tv"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:textColor="@color/black"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/gray"
            android:text="과일"
            android:textSize="25dp"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/button_etc_tv"
            app:layout_constraintEnd_toStartOf="@id/button_temp2_tv"
            app:layout_constraintTop_toTopOf="@id/button_etc_tv"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/button_temp2_tv"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:text="육류"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_temp1_tv"
            app:layout_constraintTop_toTopOf="@id/button_etc_tv"
            android:visibility="invisible"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>











</androidx.constraintlayout.widget.ConstraintLayout>